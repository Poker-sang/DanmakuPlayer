<ContentPresenter
    x:Class="DanmakuPlayer.Views.Controls.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fluent="using:FluentIcons.WinUI"
    xmlns:local="using:DanmakuPlayer.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="using:DanmakuPlayer.Resources"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loading="WelcomePageOnLoading"
    mc:Ignorable="d">
    <ContentPresenter.Resources>
        <Style x:Key="CardStyle" TargetType="StackPanel">
            <Setter Target="Width" Value="250" />
            <Setter Target="Padding" Value="12" />
            <Setter Target="Background" Value="{ThemeResource CardBackgroundFillColorDefault}" />
            <Setter Target="BorderBrush" Value="{ThemeResource CardStrokeColorDefault}" />
            <Setter Target="BorderThickness" Value="0.5" />
            <Setter Target="CornerRadius" Value="4" />
            <Setter Target="Spacing" Value="4" />
        </Style>
    </ContentPresenter.Resources>
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Spacing="12">
        <StackPanel Orientation="Horizontal" Spacing="16">
            <Image
                Width="40"
                Height="40"
                VerticalAlignment="Center"
                Source="/Assets/DanmakuPlayer400.png" />
            <TextBlock
                Margin="0,0,0,2"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="SemiBold"
                Text="{x:Bind resources:ConstantStrings.AppTitle}" />
            <TextBlock
                Margin="0,0,0,2"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                Text="{x:Bind resources:Emoticon.Okay}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="12">
            <StackPanel Style="{StaticResource CardStyle}">
                <TextBlock x:Uid="/WelcomePage/PlayTitle" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                <TextBlock
                    x:Uid="/WelcomePage/PlayDescription"
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    TextWrapping="Wrap" />
                <Button
                    Margin="0,8,0,0"
                    local:TapHelper.DoubleTappedDisabled="True"
                    Click="PasteClicked">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <fluent:SymbolIcon FontSize="14" Symbol="ClipboardPaste" />
                        <TextBlock x:Uid="/WelcomePage/PasteButtonText" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Style="{StaticResource CardStyle}">
                <TextBlock x:Uid="/WelcomePage/DanmakuTitle" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                <TextBlock
                    x:Uid="/WelcomePage/DanmakuDescription"
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    TextWrapping="Wrap" />
                <ContentControl IsEnabled="{x:Bind local:C.Negation(_backgroundPanel.Vm.LoadingDanmaku), Mode=OneWay}">
                    <StackPanel
                        Margin="0,8,0,0"
                        Orientation="Horizontal"
                        Spacing="12">
                        <Button Click="{x:Bind _backgroundPanel.ImportClick}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <fluent:SymbolIcon FontSize="14" Symbol="ArrowDownload" />
                                <TextBlock x:Uid="/WelcomePage/DanmakuImportOnlineButtonText" />
                            </StackPanel>
                        </Button>
                        <Button Click="{x:Bind _backgroundPanel.FileClick}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <fluent:SymbolIcon FontSize="14" Symbol="Code" />
                                <TextBlock x:Uid="/WelcomePage/DanmakuImportFromLocalButtonText" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ContentControl>
            </StackPanel>

            <StackPanel Style="{StaticResource CardStyle}">
                <TextBlock x:Uid="/WelcomePage/RemoteTitle" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                <TextBlock
                    x:Uid="/WelcomePage/RemoteDescription"
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    TextWrapping="Wrap" />
                <Button Margin="0,8,0,0" Click="{x:Bind _backgroundPanel.RemoteClick}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <fluent:SymbolIcon FontSize="14" Symbol="LinkMultiple" />
                        <TextBlock x:Uid="/WelcomePage/RemoteButtonText" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</ContentPresenter>
