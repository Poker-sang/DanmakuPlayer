<UserControl
    x:Class="DanmakuPlayer.Views.Controls.RemoteDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fluent="using:FluentIcons.WinUI"
    xmlns:local="using:DanmakuPlayer.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:remote="using:DanmakuPlayer.Models.Remote"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="NormalItemTemplate" x:DataType="remote:RoomInfo">
            <ItemContainer>
                <Grid Padding="16,16" RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="{x:Bind Name}" />
                    <StackPanel
                        Grid.Row="1"
                        Orientation="Horizontal"
                        Spacing="4">
                        <fluent:FluentIcon Icon="People" />
                        <TextBlock Text="{x:Bind Users.Count}" />
                        <TextBlock
                            Margin="4,0"
                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            Text="{x:Bind CreatedAt.DateTime.ToShortTimeString()}" />
                    </StackPanel>
                </Grid>
            </ItemContainer>

        </DataTemplate>
        <DataTemplate x:Key="NewRoomItemTemplate" x:DataType="remote:RoomInfo">
            <ItemContainer>
                <Grid
                    Padding="16,16"
                    BorderThickness="1"
                    RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <fluent:FluentIcon FontSize="16" Icon="Add" />
                        <TextBlock
                            x:Uid="/RemoteDialog/CreateRoomTextBlock"
                            Grid.Row="0"
                            FontSize="16"
                            FontWeight="SemiBold" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Orientation="Horizontal"
                        Spacing="4">
                        <TextBlock Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="{x:Bind Name}" />
                    </StackPanel>
                </Grid>

            </ItemContainer>
        </DataTemplate>

        <local:RoomInfoDataTemplateSelector
            x:Key="RoomInfoDataTemplateSelector"
            New="{StaticResource NewRoomItemTemplate}"
            Normal="{StaticResource NormalItemTemplate}" />
    </UserControl.Resources>
    <ContentDialog x:Uid="/RemoteDialog/RemoteDialog" DefaultButton="Close">
        <ContentDialog.Title>
            <StackPanel Orientation="Horizontal" Spacing="20">
                <TextBlock x:Uid="/RemoteDialog/RemoteDialogTitleTextBlock" />
                <ProgressRing
                    x:Name="ProgressRing"
                    IsActive="False"
                    IsIndeterminate="True" />
            </StackPanel>
        </ContentDialog.Title>
        <Grid RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBox
                x:Name="ServerTextBlock"
                x:Uid="/RemoteDialog/ServerTextBlock"
                Grid.Row="0" />
            <ItemsView
                Grid.Row="1"
                IsItemInvokedEnabled="True"
                ItemInvoked="ItemsView_ItemInvoked"
                ItemTemplate="{StaticResource RoomInfoDataTemplateSelector}"
                ItemsSource="{x:Bind Rooms, Mode=OneWay}"
                SelectionMode="None">
                <ItemsView.Layout>
                    <UniformGridLayout
                        ItemsStretch="Fill"
                        MaximumRowsOrColumns="3"
                        MinItemWidth="200"
                        Orientation="Horizontal" />
                </ItemsView.Layout>
            </ItemsView>
            <Grid Grid.Row="2" ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Uid="/RemoteDialog/RefreshButton"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    Click="RefreshRooms_Click" />
                <Button
                    x:Uid="/RemoteDialog/DisconnectButton"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    Click="Disconnect_OnClick"
                    IsEnabled="{x:Bind IsConnected, Mode=OneWay}" />
            </Grid>
        </Grid>
    </ContentDialog>
</UserControl>
