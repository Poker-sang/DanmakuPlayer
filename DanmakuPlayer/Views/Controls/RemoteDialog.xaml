<UserControl
    x:Class="DanmakuPlayer.Views.Controls.RemoteDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fluent="using:FluentIcons.WinUI"
    xmlns:local="using:DanmakuPlayer.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:remote="using:DanmakuPlayer.Models.Remote"
    mc:Ignorable="d">
    <ContentDialog x:Uid="/RemoteDialog/RemoteDialog" DefaultButton="Close">
        <ContentDialog.Title>
            <StackPanel Orientation="Horizontal" Spacing="20">
                <TextBlock x:Uid="/RemoteDialog/RemoteDialogTitleTextBlock" />
                <ProgressRing
                    x:Name="ProgressRing"
                    IsActive="False"
                    IsIndeterminate="True" />
            </StackPanel>
        </ContentDialog.Title>
        <Grid RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBox
                x:Name="ServerTextBlock"
                x:Uid="/RemoteDialog/ServerTextBlock"
                Grid.Row="0" />
            <ListView
                Grid.Row="1"
                IsItemClickEnabled="True"
                ItemClick="GridView_ItemClick"
                ItemsSource="{x:Bind Rooms, Mode=OneWay}"
                SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="remote:RoomInfo">
                        <Grid Padding="4,12" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="{x:Bind Name}" />
                            <StackPanel
                                Grid.Row="1"
                                Orientation="Horizontal"
                                Spacing="4">
                                <fluent:FluentIcon Icon="People" Visibility="{x:Bind local:C.ToVisibilityNegation(IsDefault)}" />
                                <TextBlock Text="{x:Bind Users.Count}" Visibility="{x:Bind local:C.ToVisibilityNegation(IsDefault)}" />
                                <TextBlock
                                    Margin="4,0"
                                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                    Text="{x:Bind CreatedAt.DateTime.ToShortTimeString()}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <controls:UniformGrid RowSpacing="12" Rows="1" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <Grid Grid.Row="2" ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Uid="/RemoteDialog/RefreshButton"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    Click="RefreshRooms_Click" />
                <Button
                    x:Uid="/RemoteDialog/DisconnectButton"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    Click="Disconnect_OnClick"
                    IsEnabled="{x:Bind IsConnected, Mode=OneWay}" />
            </Grid>
        </Grid>
    </ContentDialog>
</UserControl>
